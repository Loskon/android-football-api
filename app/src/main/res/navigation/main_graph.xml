<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.loskon.sportapi.splash.presentation.SplashFragment"
        android:label="SplashScreenFragment">
        <action
            android:id="@+id/openMatchList"
            app:destination="@id/matchListFragment"
            app:popUpTo="@+id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/matchListFragment"
        android:name="com.loskon.sportapi.matchlist.presentation.MatchListFragment"
        android:label="MatchListFragment">
        <argument
            android:name="matches"
            android:defaultValue="@null"
            app:argType="com.loskon.sportapi.model.MatchModel[]"
            app:nullable="true" />
    </fragment>

</navigation>